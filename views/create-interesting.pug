extends layout.pug
mixin option(...names)
    each name in names
        option(value=name selected=form ? form.favoriteBeatle === name ? "selected": false : false)=name
block content
    include includes/errors.pug
    form(action="/create-interesting" method="post")
        include includes/form-inputs.pug
        label(for="age") Age:
        input(type="number" name="age" value=form ? form.age : "")
        label(for="favoriteBeatle") Favorite Beatle:
        select(name="favoriteBeatle")
            option(value="") --Please choose an option--
            +option("John", "Paul", "Ringo", "George", "Scooby-Doo")
        label(for="iceCream") likes ice cream:
        input(type="checkbox" name="iceCream" checked=form ? form.iceCream === "on" ? true: false : false)
        input(type="submit" name="submit" value="Create Interesting User")
